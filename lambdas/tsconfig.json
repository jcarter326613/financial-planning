{
    "compilerOptions": {
        "target": "ES2017",
        "module": "Commonjs",
        "moduleResolution": "node",
        "outDir": "out",
        "rootDir": "./src",
        "sourceMap": true,
        "strict": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "skipLibCheck": true
    },
    "ts-node": {
      "files": true
    },
    "include": ["./src/main/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts", "./src/tests/**/*"]
}